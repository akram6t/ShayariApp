<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnglishPoetry" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/halfblack</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/halfblack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EnglishPoetry.SeekBar" parent="Theme.MaterialComponents.Light">
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="Theme.EnglishPoetry.ButtonRipple" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryVariant">@color/white</item>
    </style>

    <style name="Theme.EnglishPoetry.ProgressBar" parent="Theme.MaterialComponents.Light">
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="Theme.EnglishPoetry.RecyclerView" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="Theme.EnglishPoetry.ButtonRippleLangAct" parent="Theme.MaterialComponents.Light">
        <item name="colorOnPrimary">@color/halfblack</item>
    </style>

    <style name="Theme.EnglishPoetry.floatingAction" parent="Theme.MaterialComponents.Light">
        <item name="colorOnSecondary">@color/halfblack</item>
    </style>

    <style name="Theme.EnglishPoetry.EditText" parent="Theme.MaterialComponents.Light">
        <item name="colorSecondary">#FF0000</item>
    </style>

</resources>