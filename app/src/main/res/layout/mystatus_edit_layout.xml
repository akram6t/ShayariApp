<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/editdialogClose"
                    android:layout_width="50dp"
                    android:layout_height="64dp"
                    android:background="@color/wrongrightcolor"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/icon_wrong"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:id="@+id/editdialogRight"
                    android:layout_width="50dp"
                    android:layout_height="64dp"
                    android:background="@color/wrongrightcolor"
                    android:paddingStart="5dp"
                    android:paddingTop="17dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="17dp"
                    android:src="@drawable/icon_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white"
                    android:contentDescription="@string/todo" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/editdialogEdittext"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/edittext_backround"
                android:ems="10"
                android:fontFamily="@font/anonymous_pro"
                android:gravity="center"
                android:inputType="textNoSuggestions|textMultiLine"
                android:padding="20dp"
                android:scrollbars="vertical"
                android:theme="@style/Theme.EnglishPoetry.EditText"
                android:textColor="@color/white"
                android:autofillHints="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>